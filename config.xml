<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.ABAKUS" 
        versionCode = "1032"
        version     = "1032">     <!-- ABAKUS -->

    <name>ABAKUS</name>

    <!-- ACHTUNG Die config.xml muss auf _Standard und _Tablet geaendert werden.yy -->

    <description>
        ABAKUS die k√∂nigliche Tarock-App.
    </description>

    <author href="https://tarock.web.app" email="Luger.Leo@gmail.com">
        Leopold Luger
    </author>

    <platform name="android" />
    <plugin   name="cordova-plugin-whitelist" spec="1.3.0" />

    <preference name="android-minSdkVersion"    value="18" /> <!-- Android Version 4.3 -->  
    <preference name="android-targetSdkVersion" value="28" /> <!-- Android Version 9.0 -->

    <preference name="pgb-builder-version" value="1"       /> <!-- ResponsiveVoice funktioniert sonst nicht! -->
    <preference name="splashscreen"      value="Icons/AbakusSplash.png" />
    <preference name="permissions"       value="none"      />
    <preference name="phonegap-version"  value="cli-9.0.0" />
    <preference name="orientation"       value="portrait"  />
    <preference name="target-device"     value="universal" />
    <preference name="fullscreen"        value="false"     /> 

    <splash src="Icons/AbakusSplash.png" platform="android"/>

    <icon src="Icons/icon-72-hdpi.png" />
    <icon src="Icons/icon-72-hdpi.png"  platform="android" />
    <icon src="Icons/icon-36-ldpi.png"  platform="android" density="ldpi"  />
    <icon src="Icons/icon-48-mdpi.png"  platform="android" density="mdpi"  />
    <icon src="Icons/icon-72-hdpi.png"  platform="android" density="hdpi"  />
    <icon src="Icons/icon-96-xhdpi.png" platform="android" density="xhdpi" />
</widget>